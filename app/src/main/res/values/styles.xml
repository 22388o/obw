<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:navigationBarColor">@color/somewhatBlack</item>
        <item name="snackbarStyle">@style/snackbarStyle</item>
        <item name="colorOnSurface">@color/veryWhite</item>
        <item name="colorPrimary">@color/veryWhite</item>
        <item name="colorAccent">@color/veryWhite</item>
        <item name="android:textColor">@color/darkerWhite</item>
        <item name="colorPrimaryDark">@color/somewhatBlack</item>
        <item name="android:disabledAlpha">0.7</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="snackbarStyle" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/panel_snackbar</item>
    </style>

    <style name="AppThemeNoActionBar" parent="AppTheme">
        <item name="android:windowBackground">@color/somewhatBlack</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- item styles -->
    <style name="BaseButton">
        <item name="nb_textColor">@color/veryWhite</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="nb_borderWidth">2dp</item>
        <item name="nb_radius">3dp</item>
    </style>

    <style name="GrayButton" parent="BaseButton">
        <item name="nb_focusColor">@color/veryDarkGrey</item>
        <item name="nb_borderColor">@color/boringGrey</item>
        <item name="nb_backgroundColor">@color/veryDarkGrey</item>
    </style>

    <style name="IconButton" parent="BaseButton">
        <item name="nb_focusColor">@color/veryDarkGrey</item>
        <item name="nb_borderColor">@color/boringGrey</item>
        <item name="nb_backgroundColor">@color/veryDarkGrey</item>
        <item name="nb_borderWidth">1dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingTop">13dp</item>
    </style>

    <style name="IconRedButton" parent="IconButton">
        <item name="nb_focusColor">@color/ourRed</item>
        <item name="nb_borderColor">@color/boringGrey</item>
        <item name="nb_backgroundColor">@color/ourRed</item>
    </style>

    <style name="PurpleBorderButton" parent="BaseButton">
        <item name="nb_focusColor">@color/veryDarkGrey</item>
        <item name="nb_borderColor">@color/ourPurple</item>
        <item name="nb_backgroundColor">@color/veryDarkGrey</item>
    </style>

    <style name="PurpleButton" parent="BaseButton">
        <item name="nb_focusColor">@color/ourPurple</item>
        <item name="nb_borderColor">@color/ourPurple</item>
        <item name="nb_backgroundColor">@color/ourPurple</item>
    </style>

    <style name="ToggleButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@drawable/button_toggle_selector</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="GrayDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#33999999</item>
    </style>

    <style name="StandardLinearLayout" parent="AppTheme">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="StandardXYMarginLinearLayout" parent="StandardLinearLayout">
        <item name="android:padding">15dp</item>
    </style>

    <!-- view styles -->
    <style name="InputHintView">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="BoundedView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">500sp</item>
    </style>

    <style name="FillingView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="XMarginFillingView" parent="FillingView">
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="XSmallMarginFillingView" parent="FillingView">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="InFlightView">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Card and payment list -->
    <style name="Card" parent="FillingView">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Tag">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Emphasized" parent="BoundedView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- chip text -->
    <style name="ChipTextGray">
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingLeft">7sp</item>
        <item name="android:paddingRight">7sp</item>
        <item name="android:paddingBottom">6sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/border_basic</item>
    </style>

    <style name="ChipTextBasic" parent="ChipTextGray">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <!-- dialogs -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/veryBlack</item>
        <item name="android:textColor">@color/darkerWhite</item>
        <item name="android:textColorPrimary">@color/darkerWhite</item>
        <item name="android:colorAccent">@color/veryWhite</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
